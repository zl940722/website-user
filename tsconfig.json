{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "src",
        "module": "esnext",
        "target": "es5",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": false,
        "noUnusedLocals": true,
        "pretty": true,
        "importHelpers": true,
        "noEmitHelpers": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise",
            "es2015.collection",
            "es2017.object"
        ],
        "baseUrl": ".",
        "paths": {
            "component/*": [
                "src/app/component/*"
            ],
            "util/*": [
                "src/util/*"
            ],
            "dto/*": [
                "src/dto/*"
            ],
            "common/*": [
                "src/app/page/common/*"
            ],
            "api/*": [
                "src/app/api/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "build",
        "config",
        "swagger"
    ],
    "files": [
        "typings/index.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": false
    }
}
